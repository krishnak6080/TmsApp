@model TmsApp.Models.UserDatum
@{
    ViewData["Title"] = "login";
}

<div class="row">

    <div class="logolog">
        <img src="/images/car-logo.png" class="car-logo" />
        <p>TMS</p>
    </div>
    <div class="vid-con">
        <video src="/images/home.mp4" class="log-vid" id="video-slider" loop autoplay muted />
    </div>
    <div class="log-text">
        <h2>Welcome Admin,</h2>
        <h3>
          Please enter the login credentials 
       </h3>
    </div>
    <div class="box-con">
        <h1>Admin-Login</h1>
        
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" type="text" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passcode" class="control-label"></label>
                <input asp-for="Passcode" type="password" class="form-control" />
                <span asp-validation-for="Passcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-primary" />
            </div>
            <div>
                @{
                    if (ViewBag.LoginError != null)
                    {
                        <label class="text-danger">
                            @ViewBag.LoginError
                        </label>
                    }
                }
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


