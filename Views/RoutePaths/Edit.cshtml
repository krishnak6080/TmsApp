@model TmsApp.Models.RoutePath

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RoutePath</h4>

<hr />

<p class="text-dark bg-warning col-md-4" style="margin:5px; padding:8px;">Vehicle Number and Stop cannot be changed!</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RouteNumber" />
            <div class="form-group">
                <label asp-for="VehicleNumber" class="control-label"></label>
                <input asp-for="VehicleNumber" class="form-control" readonly />
                <span asp-validation-for="VehicleNumber" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Pickup" class="control-label"></label>
                <input asp-for="Pickup" class="form-control" />
                <span asp-validation-for="Pickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleStop" class="control-label"></label>
                <input asp-for="VehicleStop" class="form-control" readonly />
                <span asp-validation-for="VehicleStop" class="text-danger"></span>
                
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
