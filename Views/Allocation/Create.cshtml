@model TmsApp.Models.Allocation

@{
    ViewData["Title"] = "Create";
}

<h1>Allocate </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onsubmit="onSucess()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VehicleNumber" class="control-label"></label>
                <select asp-for="VehicleNumber" class ="form-control" asp-items="ViewBag.VehicleNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="RouteNumber" class="control-label"></label>
                <select asp-for="RouteNumber" class ="form-control" asp-items="ViewBag.RouteNumber"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
        function onSucess() {
            alert("Vehicle is allocating to the Employee. Once Done, it will redirect to the list!")
        }
    </script>